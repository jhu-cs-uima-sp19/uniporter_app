<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BigText"
            android:layout_margin="7dp" />

        <TextView
            android:id="@+id/type_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            android:text="type"
            android:textColor="@color/BigText"
            android:textSize="23sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15sp"
            android:text="PENDING RIDE REQUESTS:"
            android:textColor="@color/BigText"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Airline"
            android:textStyle="italic"
            android:textColor="@color/BigText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/airline_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            android:text="airline"
            android:textColor="@color/BigText"
            android:layout_marginBottom="25sp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="@color/BigText"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="Flight Number" />

        <TextView
            android:id="@+id/flight_no_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            android:text="flight no"
            android:textColor="@color/BigText"
            android:layout_marginBottom="15sp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="@color/BigText"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="Date" />

        <TextView
            android:id="@+id/date_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:text="date"
            android:textColor="@color/BigText"
            android:layout_marginBottom="15sp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="@color/BigText"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="Time" />

        <TextView
            android:id="@+id/flight_time_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:text="flight time"
            android:textColor="@color/BigText"
            android:textStyle="italic"
            android:layout_marginBottom="15sp"
            android:textSize="18sp" />

    </LinearLayout>


</android.support.v7.widget.CardView>